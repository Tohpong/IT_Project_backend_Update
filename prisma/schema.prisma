  generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
  }

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

  // Model สำหรับ table `account`
  model Account {
    account_id  Int     @id
    account_pic String? @db.VarChar(255)
    username    String  @db.VarChar(100)
    password    String  @db.VarChar(100)
    courses     Course[]
    members     Member[]
    trainers    Trainer[]
  }

  // Model สำหรับ table `course`
  model Course {
    course_id   Int     @id
    course_name String?  @db.VarChar(100)
    img_url     String? @db.VarChar(255)
    date        DateTime
    account_id  Int
    account     Account @relation(fields: [account_id], references: [account_id])
  }

  // Model สำหรับ table `member`
  model Member {
    member_id   Int     @id
    full_name   String  @db.VarChar(100)
    age         Int
    phone       String  @db.VarChar(100)
    birthdate   DateTime?
    gender      String  @db.VarChar(100)
    account_id  Int
    account     Account @relation(fields: [account_id], references: [account_id])
  }

  // Model สำหรับ table `trainer`
  model Trainer {
    trainer_id      Int     @id
    trainer_fullname String  @db.VarChar(100)
    trainer_age     Int?
    trainer_date    DateTime?
    account_id      Int
    account         Account @relation(fields: [account_id], references: [account_id])
  }
